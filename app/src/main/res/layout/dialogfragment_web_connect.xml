<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_info_container"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/username"
            android:labelFor="@id/web_username"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/web_username"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:autofillHints="readerName"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/password"
            android:labelFor="@id/web_password"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/web_password"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:autofillHints="readerName"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            />
        <CheckBox
            android:id="@+id/save_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/save_username"
            android:text="@string/save_username"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/error_view"
            android:layout_width="300dp"
            android:textColor="@color/accent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/menu_chronokeep"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/loading_container"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateTint="@color/primary"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logging_in"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/events_container"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/select_event"
            android:labelFor="@id/events_spinner"
            android:layout_marginBottom="5dp"
            />
        <Spinner
            android:id="@+id/events_spinner"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/event_error_view"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/submit_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>